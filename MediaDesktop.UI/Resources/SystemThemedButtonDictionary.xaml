<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MediaDesktop.UI.Resources"
    xmlns:muxm="using:Microsoft.UI.Xaml.Media">
    <muxm:SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource SystemAccentColorLight1}" />
    <muxm:SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{ThemeResource SystemAccentColor}" />
    <muxm:SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{ThemeResource SystemAltHighColor}" />
    <muxm:SolidColorBrush x:Key="ButtonForegroundPressed" Color="{ThemeResource SystemAltMediumColor}" />
</ResourceDictionary>
